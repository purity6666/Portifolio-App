<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/projectFormat">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/cardViewColor">

        <ImageView
            android:id="@+id/projectImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/projectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/projectImage"
            android:layout_marginStart="10dp"
            android:text="Project Name"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="@font/acre_medium" />

        <TextView
            android:id="@+id/projectDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/projectImage"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/projectName"
            android:layout_marginTop="5dp"
            android:text="Project Short Description"
            android:textColor="#A8A7A7"
            android:textSize="15sp"
            android:fontFamily="@font/acre_medium" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>